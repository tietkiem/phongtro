                    submitSpinner.classList.add('hidden');
                }
            }
            
            function parsePrice(priceStr) {
                if (!priceStr) return 0;
                priceStr = priceStr.toLowerCase().replace(/,/g, '.');
                let price = 0;
                if (priceStr.includes('tr')) {
                    const parts = priceStr.split('tr');
                    const mainPart = parseFloat(parts[0]) || 0;
                    price = mainPart * 1000000;
                    if (parts[1]) {
                        const subPart = parseInt(parts[1]) || 0;
                        price += subPart * 100000;
                    }
                } else {
                    price = parseInt(priceStr.replace(/\D/g, '')) || 0;
                }
                return price;
            }

            function parseKNumber(kStr) {
                if (!kStr) return 0;
                kStr = kStr.toLowerCase().replace(/,/g, '.');
                let value = 0;
                if (kStr.includes('k')) {
                    const parts = kStr.split('k');
                    const mainPart = parseFloat(parts[0]) || 0;
                    value = mainPart * 1000;
                    if (parts[1]) {
                        const subPart = parseInt(parts[1]) || 0;
                        value += subPart * 100;
                    }
                } else {
                    value = parseInt(kStr.replace(/\D/g, '')) || 0;
                }
                return value;
            }
            
            function parseData() {
                const text = dataParserInput.value;
                if (!text) { alert('Vui l√≤ng d√°n n·ªôi dung v√†o √¥.'); return; }

                const getVal = (regex, defaultVal = '') => (text.match(regex) || [])[1] || defaultVal;

                adminForm.code.value = getVal(/M√£\s*(\S+)/i);
                adminForm.address.value = getVal(/[üïçüè†]\s*(.*)/i).trim();
                
                const priceStr = getVal(/Gi√°\s*[-:]?\s*([^\n\r]*)/i).trim();
                adminForm.price.value = parsePrice(priceStr);

                const areaStr = getVal(/Di·ªán t√≠ch\s*(\d+)/i);
                adminForm.area.value = parseInt(areaStr) || 0;

                const elecStr = getVal(/ƒêi·ªán\s*([^\s\/]+)/i);
                adminForm.electricity.value = parseKNumber(elecStr);

                const waterStr = getVal(/N∆∞·ªõc\s*([^\s\/]+)/i);
                adminForm.water.value = parseKNumber(waterStr);
                
                const serviceFeeStr = getVal(/(?:D·ªãch v·ª• chung|dvc)[:\s]*([^\s\/]+)/i);
                adminForm.serviceFee.value = parseKNumber(serviceFeeStr);

                const internetStr = getVal(/M·∫°ng\s*([^\s\/]+)/i) || getVal(/wifi\s*([^\s\/]+)/i);
                adminForm.internet.value = parseKNumber(internetStr);
                if(adminForm.internet.value === 0 && /g·ªìm.*wifi/i.test(text.toLowerCase())){
                    adminForm.internet.value = 100000;
                }

                adminForm.elevator.value = /thang m√°y/i.test(text.toLowerCase()) ? 'C√≥' : 'Kh√¥ng';
                adminForm.wc.value = /kh√©p k√≠n|gi·∫∑t ri√™ng/i.test(text.toLowerCase()) ? 'Kh√©p k√≠n' : 'Chung';

                const address = adminForm.address.value;
                const allWards = ["M·ªπ ƒê√¨nh", "Y√™n Ho√†", "L√°ng Th∆∞·ª£ng", "Th∆∞·ª£ng ƒê√¨nh", "Ph√∫ M·ªπ", "D·ªãch V·ªçng", "Mai D·ªãch", "C·∫ßu Di·ªÖn", "H·ªì T√πng M·∫≠u"];
                adminForm.ward.value = allWards.find(w => address.toLowerCase().includes(w.toLowerCase())) || '';

                alert('B√≥c t√°ch d·ªØ li·ªáu ho√†n t·∫•t! Vui l√≤ng ki·ªÉm tra l·∫°i th√¥ng tin v√† ch·ªçn ·∫£nh.');
            }

            function downloadDataFile() {
                const dataString = JSON.stringify(sessionListings, null, 2);
                const blob = new Blob([dataString], { type: 'application/json' });
                const a = document.createElement('a');
                a.href = URL.createObjectURL(blob);
                a.download = 'data.json';
                document.body.appendChild(a);
                a.click();
                document.body.removeChild(a);
                URL.revokeObjectURL(a.href);
            }

