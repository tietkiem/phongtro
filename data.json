                    renderAdminListings();
                    alert('Th√™m tin ƒëƒÉng m·ªõi th√†nh c√¥ng! D·ªØ li·ªáu ƒë√£ ƒë∆∞·ª£c l∆∞u t·∫°m th·ªùi.');
                    
                    // Reset form
                    Object.values(adminForm).forEach(input => { if (input.type !== 'select-one') input.value = ''; });
                    imagePreviewContainer.innerHTML = '';
                    dataParserInput.value = '';
                    uploadedFiles = [];

                } catch (error) {
